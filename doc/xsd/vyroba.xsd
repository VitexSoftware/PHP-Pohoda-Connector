                <xsd:annotation>
                    <xsd:documentation>
                        Vazba na doklad. Informace o vazbì položky exportovaného dokladu na položku jiného dokladu (pouze pro export).
                    </xsd:documentation>
                </xsd:annotation>
            </xsd:element>
            <xsd:element name="quantity" type="xsd:float" minOccurs="0">
                <xsd:annotation>
                    <xsd:documentation>Množství.</xsd:documentation>
                </xsd:annotation>
            </xsd:element>
            <xsd:element name="stockItem" type="typ:stockItemType" minOccurs="0">
                <xsd:annotation>
