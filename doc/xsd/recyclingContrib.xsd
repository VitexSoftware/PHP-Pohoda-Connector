            <xsd:element name="recyclingContribHeader" type="rec:recyclingContribHeaderType" minOccurs="0"/>      
        </xsd:sequence>
        <xsd:attribute name="version" type="rec:recVersionType" use="required"/>
    </xsd:complexType>
  
    <xsd:simpleType name="recVersionType">
        <xsd:annotation>
            <xsd:documentation>Verze, které jsou dostupné k tomuto dokladu. Podrobnosti k jednotlivým verzím najdete na www.stormware.cz/xml</xsd:documentation>
        </xsd:annotation>
        <xsd:restriction base="xsd:string">
            <xsd:enumeration value="2.0"/>      
        </xsd:restriction>
    </xsd:simpleType>
  
    <xsd:complexType name="recyclingContribHeaderType">
        <xsd:all>
            <xsd:element name="id" type="typ:idType" minOccurs="0">
                <xsd:annotation>
                    <xsd:documentation>ID záznamu (pouze pro export).</xsd:documentation>
                </xsd:annotation>
            </xsd:element>
            <xsd:element name="code" type="typ:string10">
                <xsd:annotation>
                    <xsd:documentation>Zkratka recyklaèního pøíspìvku.</xsd:documentation>
                </xsd:annotation>
