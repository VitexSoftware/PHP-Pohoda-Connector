          <xsd:documentation>DAL.</xsd:documentation>
        </xsd:annotation>
      </xsd:element>
    </xsd:all>
  </xsd:complexType>
  


<!-- RESPONSE -->

<xsd:element name="accountancyResponse" type="act:accountancyResponseType"/>

<xsd:complexType name="accountancyResponseType">
	<xsd:complexContent>
		<xsd:extension  base="rdc:documentResponseType"/>
	</xsd:complexContent>
</xsd:complexType>

</xsd:schema>
